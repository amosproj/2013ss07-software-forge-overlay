@model SoftwareForge.Common.Models.ProjectJoinMessageModel

@{
    ViewBag.Title = "DeclineRequest";
}

<h2>DeclineRequest</h2>

@using (Html.BeginForm("PostDeclineMessage","Home", null)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <div class="editor-label">
            @Html.LabelFor(model => model.Message.Text)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Message.Text)
            @Html.ValidationMessageFor(model => model.Message.Text)
        </div>
        <p>
            <input type="submit" value="Decline and send an optional Message" />
        </p>
        
}


