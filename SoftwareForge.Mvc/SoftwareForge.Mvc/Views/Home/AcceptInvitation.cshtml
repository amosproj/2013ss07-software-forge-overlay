@model SoftwareForge.Common.Models.ProjectInvitationMessageModel
@{
    ViewBag.Title = "Accept Invitation";
}

<h2>AcceptRequest</h2>

@using (Html.BeginForm("PostAcceptInvitationMessage", "Home", null, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Message request</legend>
        @Html.HiddenFor(model => model.ProjectInvitationRequest.Id)
  
        <div class="editor-label">
            @Html.LabelFor(model => model.Message.Text)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Message.Text)
            @Html.ValidationMessageFor(model => model.Message.Text)
        </div>
        <p>
            <input type="submit" value="Accept and send Message" />
        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Back to Dashboard","Dashboard","Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
