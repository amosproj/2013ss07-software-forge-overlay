<!DOCTYPE html>
<html lang="de">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        
        <title>@ViewBag.Title - Software Forge</title>
        
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Software Forge", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                       Hello <span class="username">@User.Identity.Name</span>!
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
                            <li>@Html.ActionLink("All projects", "Index", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Software Forge</p>
                </div>
            </div>
        </footer>

        <!-- Loading overlay. Invisible per default. Show it for long actions! -->
        <div id="loading">
            <div id="loadingcontent">
                <p id="loadingspinner">
                    Please wait...
                </p>
            </div>
        </div>  
        
        <script type="text/javascript" 
        src="@Url.Content("~/Scripts/spin.min.js")"></script>
        <script type="text/javascript">
             window.loadingController = {

                showLoadingLayer: function (message) {
                    $("#loading").fadeIn();
                    var opts = {
                        lines: 12, // The number of lines to draw
                        length: 7, // The length of each line
                        width: 4, // The line thickness
                        radius: 10, // The radius of the inner circle
                        color: '#000', // #rgb or #rrggbb
                        speed: 1, // Rounds per second
                        trail: 60, // Afterglow percentage
                        shadow: false, // Whether to render a shadow
                        hwaccel: false // Whether to use hardware acceleration
                    };
                    var loadingspinner = document.getElementById('loadingspinner');
                    loadingspinner.innerHTML = message;
                    var target = document.getElementById('loading');
                    var spinner = new Spinner(opts).spin(target);
                },

            };


        </script>
        

    </body>
</html>
