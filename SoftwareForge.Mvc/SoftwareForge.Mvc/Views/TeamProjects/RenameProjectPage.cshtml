@model SoftwareForge.Common.Models.Project

<h2>Rename Project @Model.Name</h2>



@using (Html.BeginForm("RenameProject", "TeamProjects"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Project</legend>
        
        @Html.HiddenFor(model => model.Guid)
        @Html.ValidationMessageFor(model => model.Guid)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.TfsName)
        </div>
        <div class="editor-field">
            @Model.TfsName
            
        </div>
        <p>
            <input type="submit" value="Rename" />
        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Back to Project", "ProjectDetailsPage", new { guid=Model.Guid })
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}